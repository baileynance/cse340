<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="update-account-form" action="/account/update-account" method="post">
  <label for="account_firstname">First Name:</label>
  <input type="text" name="account_firstname" class="account_firstname" value="<%= locals.account_firstname %>" required>
  <label for="account_lastname">Last Name:</label>
  <input type="text" name="account_lastname" class="account_lastname" value="<%= locals.account_lastname %>" required>
  <label for="account_email">Email:</label>
  <input type="text" name="account_email" value="<%= locals.account_email %>" class="account_email" required>
  <input type="submit" name="submit" value="Update" disabled="disabled">
  <input type="hidden" name="account_id"
  <% if(locals.account_id) { %> value="<%= locals.account_id %>"
  <% } %>>
</form>

<div id="password-change">
    <h2>Update Password:</h2>
    <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
    <p>*note your original password will be changed</p>
</div>

<form id="update-password-form" action="/account/update-password" method="post">
    <label for="account_password">Password:</label>
    <input type="text" name="account_password" class="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" class="account-password" required>
    <input type="submit" name="submit" value="Update">
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>

<script src="../../js/account-update.js"></script>
