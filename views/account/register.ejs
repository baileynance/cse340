<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="register-form" action="/account/registration" method="post">
    <label for="account_firstname">First Name:</label>
    <input type="text" name="account_firstname" placeholder="First Name" class="account-firstname" required value="<%= locals.account_firstname %>">
    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" placeholder="Last Name" class="account-lastname" required value="<%= locals.account_lastname %>">
    <label for="account_email">Email:</label>
    <input type="email" name="account_email" placeholder="Enter a valid email address" class="account-email" required value="<%= locals.account_email %>">
    <label for="account_password">Password:</label>
    <input type="password" name="account_password" placeholder="Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" class="account-password" required>
    <div id="password-requirements">
      <ul>
        <li>12 characters</li>
        <li>1 uppercase character</li>
        <li>1 number</li>
        <li>1 special character</li>
      </ul>
    </div>
    <input type="submit" name="register" value="Register" id="account-register">
</form>