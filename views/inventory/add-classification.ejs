<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="classification-form" action="/inv/add-classification" method="post">
  <label for="classification_name">Classification</label>
  <input type="text" name="classification_name" class="classification-name" pattern="^[0-9a-zA-Z \b]+$" value="<%= locals.classification_name %>" required>
  <input type="submit" name="submit" value="Submit" class="submit">
</form>