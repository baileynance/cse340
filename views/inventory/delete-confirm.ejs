<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    
    <%- messages() %>
    
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    
    <form id="delete-form" action="/inv/confirm-delete" method="post">
      <label for="inv_make">Make:</label>
      <input type="text" name="inv_make" class="inv-make" value="<%= locals.inv_make %>" readonly>
      <label for="inv_model">Model:</label>
      <input type="text" name="inv_model" class="inv-model" value="<%= locals.inv_model %>" readonly>
      <label for="inv_year">Year:</label>
      <input type="text" name="inv_year" value="<%= locals.inv_year %>" class="inv-year" readonly>
      <label for="inv_price">Price:</label>
      <input type="text" name="inv_price" value="<%= locals.inv_price %>" class="inv-price" readonly>
      <input type="submit" name="submit" value="Delete Vehicle">
      <input type="hidden" name="inv_id"
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>>
      <p>Confirm Deletion - The delete is permanent.</p>
    </form>

